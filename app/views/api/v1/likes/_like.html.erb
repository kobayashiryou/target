<%if current_api_v1_user&.like?(tweet) %>
  <%= link_to api_v1_like_path(current_api_v1_user.likes.find_by(tweet: tweet)), method: :delete, class: "link-danger", remote: true do %>
    <i class="fas fa-heart"><%= tweet.likes.count %></i>
  <%end%>
<%else%>
  <%= link_to api_v1_likes_path(tweet: tweet), method: :post, class: "link-danger", remote: true do %>
    <i class="far fa-heart"></i>
  <%end%>
<%end%>