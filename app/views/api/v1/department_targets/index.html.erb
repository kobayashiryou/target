<p id="notice"><%= notice %></p>

<h1>Department Targets</h1>

<table>
  <thead>
    <tr>
      <th>Monthly target</th>
      <th>Anually target</th>
      <th>Department</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @department_targets.each do |department_target| %>
      <tr>
        <td><%= department_target.monthly_target %></td>
        <td><%= department_target.anually_target %></td>
        <td><%= link_to '詳細', [:api, :v1, department_target] %></td>
        <%if current_api_v1_department%>
          <td><%= link_to '編集', edit_api_v1_department_target_path(department_target) %></td>
          <td><%= link_to '削除', api_v1_department_target_path(department_target), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= link_to 'DepartmentTarget', api_v1_department_targets_path %>
</div>

<div>
  <%= link_to 'TodoTargetへ！',  api_v1_todo_targets_path %>
</div>

<%= link_to '新規作成', new_api_v1_department_target_path %>
<div>
  <%= link_to 'ログアウト',  destroy_api_v1_department_session_path, :method => 'delete', class: 'btn btn-danger m-5' %>
</div>
